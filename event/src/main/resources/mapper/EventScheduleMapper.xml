<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pyokemon.event.repository.EventScheduleRepository">

    <insert id="save" parameterType="EventSchedule" useGeneratedKeys="true" keyProperty="eventScheduleId" keyColumn="event_schedule_id">
        INSERT INTO tb_event_schedule (
            event_id,
            venue_id,
            ticket_open_at,
            event_date,
            created_at,
            updated_at
        ) VALUES (
            #{eventId},
            #{venueId},
            #{ticketOpenAt},
            #{eventDate},
            #{createdAt},
            #{updatedAt}
        )
        <selectKey resultType="long" keyProperty="eventScheduleId" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

</mapper>