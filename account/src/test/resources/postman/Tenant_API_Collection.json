			},
			"response": []
		},
		{
			"name": "테넌트 삭제 (관리자)",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{adminAccessToken}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/tenants/{{tenantId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"tenants",
						"{{tenantId}}"
					]
				},
				"description": "관리자가 특정 테넌트를 삭제합니다. (관리자 권한 필요)"
			},
			"response": []
		},
		{
			"name": "내 계정 삭제",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{accessToken}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/tenants/profile",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"tenants",
						"profile"
					]
				},
				"description": "현재 로그인한 테넌트의 계정을 삭제합니다."
			},
						"response": []
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// 로그인 응답에서 토큰 추출",
					"if (pm.info.requestName === \"테넌트 로그인\") {",
					"    const response = pm.response.json();",
					"    if (response.success && response.data) {",
					"        pm.environment.set(\"accessToken\", response.data.accessToken);",
					"        pm.environment.set(\"refreshToken\", response.data.refreshToken);",
					"        pm.environment.set(\"accountId\", response.data.accountId);",
					"        pm.environment.set(\"role\", response.data.role);",
					"    }",
					"}",
					"",
					"// 테넌트 등록 응답에서 tenantId 추출",
					"if (pm.info.requestName === \"테넌트 등록\") {",
					"    const response = pm.response.json();",
					"    if (response.success && response.data) {",
					"        pm.environment.set(\"tenantId\", response.data.tenantId);",
					"        pm.environment.set(\"accountId\", response.data.accountId);",
					"    }",
					"}"
				]
			}
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8081/accounts",
			"type": "string"
		},
		{
			"key": "accessToken",
			"value": "",
			"type": "string"
		},
		{
			"key": "refreshToken",
			"value": "",
			"type": "string"
		},
		{
			"key": "adminAccessToken",
			"value": "",
			"type": "string"
		},
		{
			"key": "tenantId",
			"value": "",
			"type": "string"
		},
		{
			"key": "accountId",
			"value": "",
			"type": "string"
		},
		{
			"key": "role",
			"value": "",
			"type": "string"
		}
	]
} 