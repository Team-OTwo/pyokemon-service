						"key": "Authorization",
						"value": "Bearer {{accessToken}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"city\": \"부산시\",\n  \"street\": \"해운대로 456\",\n  \"zipcode\": \"54321\",\n  \"ceo\": \"김철수\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/tenants/profile",
