<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pyokemon.account.user.repository.UserRepository">

    <select id="findByUserId" resultType="com.pyokemon.account.user.entity.User">
        SELECT * FROM tb_user WHERE user_id = #{userId}
    </select>

    <select id="findByAccountId" resultType="com.pyokemon.account.user.entity.User">
        SELECT * FROM tb_user WHERE account_id = #{accountId}
    </select>

    <insert id="insert" parameterType="com.pyokemon.account.user.entity.User" useGeneratedKeys="true" keyProperty="userId">
        INSERT INTO tb_user (account_id, name, phone, birth, is_verified)
        VALUES (#{accountId}, #{name}, #{phone}, #{birth}, #{isVerified})
    </insert>

    <update id="update" parameterType="com.pyokemon.account.user.entity.User">
        UPDATE tb_user 
        SET name = #{name}, phone = #{phone}, birth = #{birth}, is_verified = #{isVerified}
        WHERE user_id = #{userId}
    </update>

    <delete id="delete">
        DELETE FROM tb_user WHERE user_id = #{userId}
    </delete>

</mapper> 