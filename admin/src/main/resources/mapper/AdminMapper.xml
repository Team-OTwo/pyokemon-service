<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pyokemon.admin.repository.AdminRepository">

    <resultMap id="adminResultMap" type="com.pyokemon.admin.entity.Admin">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="role" column="role"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <!-- 모든 관리자 조회 -->
    <!-- <select id="findAll" resultMap="adminResultMap">
        SELECT id, username, password, role, created_at, updated_at
        FROM tb_admin
        ORDER BY created_at DESC
    </select> -->

    <!-- 관리자 조회 -->
    <!-- <select id="findById" parameterType="Long" resultMap="adminResultMap">
        SELECT id, username, password, role, created_at, updated_at
        FROM tb_admin
        WHERE id = #{id}
    </select> -->

    <select id="findByUsername" parameterType="String" resultMap="adminResultMap">
        SELECT id, username, password, role, created_at, updated_at
        FROM tb_admin
        WHERE username = #{username}
    </select>

    <!-- 관리자 저장 -->
    <insert id="save" parameterType="com.pyokemon.admin.entity.Admin" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tb_admin (username, password, role)
        VALUES (#{username}, #{password}, #{role})
    </insert>

</mapper> 